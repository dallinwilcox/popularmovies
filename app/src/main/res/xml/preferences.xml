        and http://stackoverflow.com/a/4161645/2169923-->
    <ListPreference
        android:key="pref_sort_order_key"
        android:title="@string/pref_sort_order_title"
        android:entries="@array/pref_sort_order_entries"
        android:entryValues="@array/pref_sort_order_values"
        android:persistent="true"
        android:summary="%s"
        android:defaultValue="@string/pref_sort_order_default_value"/>
</PreferenceScreen>