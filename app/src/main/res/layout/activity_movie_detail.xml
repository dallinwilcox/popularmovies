<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/titleText"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:backgroundTint="@color/primary"/>
        <ImageView
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:id="@+id/posterImageView"
            android:layout_below="@+id/titleText"
            android:layout_alignParentStart="true"
            android:paddingLeft="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/releaseDateText"
            android:layout_alignTop="@id/posterImageView"
            android:layout_below="@+id/titleText"
            android:layout_toRightOf="@id/posterImageView"
            android:paddingLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/voteAverageText"
            android:layout_below="@+id/releaseDateText"
            android:layout_toRightOf="@id/posterImageView"
            android:paddingLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overviewText"
            android:layout_below="@id/posterImageView"
            android:padding="16dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overviewText"
            />
        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/reviews"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->
</RelativeLayout>
